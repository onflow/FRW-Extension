{
  "extends": "./.wxt/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ],
    "outDir": "./dist"
  },
  "exclude": ["./node_modules"],
  "include": [
    "src",
    "__tests__",
    "build",
    "webpack.config.ts",
    "wxt.config.ts",
    "postcss.config.mjs",
    "svgTransform.js",
    ".storybook/**/*"
  ]
}
