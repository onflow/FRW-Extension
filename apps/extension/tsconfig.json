{
  "compilerOptions": {
    "baseUrl": "./",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "noImplicitAny": false,
    "composite": false,
    "checkJs": true,
    "strict": true,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["ES2021.String", "DOM", "DOM.Iterable"],
    "types": ["chrome", "node", "react", "react-dom"],
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ],
    "outDir": "./dist"
  },
  "exclude": ["./node_modules"],
  "include": [
    "src",
    "__tests__",
    "build",
    "webpack.config.ts",
    "postcss.config.mjs",
    "svgTransform.js",
    ".storybook/**/*"
  ],
  "references": [
    {
      "path": "../../packages/core",
      "name": "@onflow/frw-core"
    },
    {
      "path": "../../packages/shared",
      "name": "@onflow/frw-shared"
    },
    {
      "path": "../../packages/data-model",
      "name": "@onflow/frw-data-model"
    },
    {
      "path": "../../packages/extension-shared",
      "name": "@onflow/frw-extension-shared"
    }
  ]
}
